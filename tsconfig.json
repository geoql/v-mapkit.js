{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["src/*"]
    },
    "types": [
      "@types/node",
      "@vueuse/core",
      "@types/apple-mapkit-js-browser",
    ]
  },
  "include": [
    "src",
    "shims",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "docs"
  ]
}
